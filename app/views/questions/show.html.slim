h1 =@question.title
#question 
  =@question.body
  #question_comments
    =render 'comments'
  =form_for @comment, remote: true do |f|
    =hidden_field_tag :commentable_type, 'Question'
    =hidden_field_tag :commentable_id, @question.id
    =hidden_field_tag :question_id, @question.id

    =f.label :body
    br
    =f.text_area :body
    br
    =f.submit 'Комментировать'
    br
.answers
  =render 'answers'
=form_for [@question,@answer], remote: true do |f|
  =f.label :body, 'Ваш ответ'
  .answer-errors
  =f.text_area :body
  br
  =f.submit 'Сохранить'
