h1 =@question.title
#question 
  =@question.body
  =render 'comments'
  =form_for [@question,@comment] do |f|
    =f.label :body
    br
    =f.text_area :body
    br
    =f.submit 'Сохранить'
.answers
  =render 'answers'
=form_for [@question,@answer], remote: true do |f|
  =f.label :body, 'Ваш ответ'
  br
  =f.text_area :body
  br
  =f.submit 'Сохранить'
