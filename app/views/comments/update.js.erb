<% if resource.errors.present? %>
  <% resource.errors.full_messages.each do |message| %>
    $('.js-comment-errors').html('<%= j message %>')
  <% end %>
<% else %>
  <%-if parent_class.name == 'Question'%>
    $('.js-question .comments').html('<%= j render parent.comments %>');
    $('.js-question .comment-form').html('');
  <%-else%>
    $("#js-answer-<%=parent.id%> .comments").html('<%= j render parent.comments %>');
    $("#js-answer-<%=parent.id%>  .comment-form").html('');
  <%-end%>
  $("#edit_comment_<%=resource.id%>").unbind();
  $(".actions").show();
  $("form#new_answer").show();
<% end %>