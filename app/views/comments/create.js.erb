<% if @comment.errors.present? %>
  <% @comment.errors.full_messages.each do |message| %>
    $('.comment-errors').before('<%= j message %>')
  <% end %>
<% else %>
  <%-if @commentable.class.name == 'Question'%>
    $('.js-question-comments').html('<%= j render partial: 'questions/comment', collection: @commentable.comments %>');
    $('.js-question-comment-form').html('');
  <%-else%>
    $("#js-answer-<%=@commentable.id%> .js-answer-comments").html('<%= j render partial: 'questions/comment', collection: @commentable.comments %>');
    $("#js-answer-<%=@commentable.id%>  .js-answer-comment-form").html('');
  <%-end%>

  
<% end %>

