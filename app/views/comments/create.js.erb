<% if @comment.errors.present? %>
  <% @comment.errors.full_messages.each do |message| %>
    $('.js-comment-errors').html('<%= j message %>')
  <% end %>
<% else %>
  <%-if @commentable.class.name == 'Question'%>
    $('.js-question .comments').html('<%= j render @commentable.comments %>');
    $('.js-question .comment-form').html('');
    $(".actions").show();
  <%-else%>
    $("#js-answer-<%=@commentable.id%> .comments").html('<%= j render @commentable.comments %>');
    $("#js-answer-<%=@commentable.id%>  .comment-form").html('');
    $(".actions").show();
  <%-end%>

  
<% end %>

