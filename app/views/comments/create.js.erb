<% if resource.errors.present? %>
  <% resource.errors.full_messages.each do |message| %>
    $('.js-comment-errors').html('<%= j message %>')
  <% end %>
<% else %>
  <%-if parent.class.name == 'Question'%>
    $('.js-question .comments').html('<%= j render parent.comments %>');
    $('.js-question .comment-form').empty();
  <%-else%>
    $("#js-answer-<%=parent.id%> .comments").html('<%= j render parent.comments %>');
    $("#js-answer-<%=parent.id%>  .new-comment-form").empty();
  <%-end%>
  $("#new_comment").unbind();
  $(".actions").show();
  $("form#new_answer").show();
<% end %>

