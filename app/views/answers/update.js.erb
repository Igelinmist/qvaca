<% if resource.errors.present? %>
  <% resource.errors.full_messages.each do |message| %>
    $('.js-answer-errors').before('<%= j message %>')
  <% end %>
<% else %>
  $('#js-answer-<%= resource.id %>').replaceWith("<%= j render 'answers/answer', answer: resource, question: parent %>");
  $('#js-answer-<%= resource.id %> .edit-answer-form').empty();
  $(".actions").show();
  $("form#new_answer").show();
<% end %>