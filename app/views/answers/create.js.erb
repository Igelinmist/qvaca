<% if resource.errors.present? %>
  <% resource.errors.full_messages.each do |message| %>
    $('.js-answer-errors').before('<%= j message %>')
  <% end %>
<% else %>
  $('.js-answers').append("<%= j render 'answers/answer', answer: resource, resource: parent  %>");
  $('form.new_answer')[0].reset();
<% end %>